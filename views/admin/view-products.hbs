<section>
    <div class="ml-5" > <a href="admin/add-products" class="btn btn-success  mt-2">Add Products</a></div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">no.</th>
      <th scope="col">Product</th>
      <th scope="col">price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
